/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    int c;
    public TreeNode buildTree(int[] inorder, int[] postorder) {

        HashMap<Integer,Integer> map=new HashMap<>();
        c=postorder.length-1;
        for(int i=0;i<inorder.length;i++)
        {
            map.put(inorder[i],i);
        }
        
        return build(inorder,0,inorder.length-1, map,postorder);
    }

        public TreeNode build(int[] inorder,int start,int end,HashMap<Integer,Integer> map,int[] postorder)
        {
            if(start>end)
            return null;

            int val=postorder[c--];
            
            TreeNode root=new TreeNode(val);

           int mid=map.get(val);

            root.right=build(inorder,mid+1,end,map,postorder);
            root.left=build(inorder,start,mid-1,map,postorder);
            return root;
      }
    }
