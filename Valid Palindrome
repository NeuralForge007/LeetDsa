class Solution {
    public boolean isPalindrome(String s) {
        String s1=s.toLowerCase();
        char[] ch=s1.toCharArray();

        int s2=0;
        for(int i=0;i<ch.length;i++){
            if(Character.isLetterOrDigit(ch[i]))
            ch[s2++]=ch[i];
        }
        int f=0;
        int l=s2-1;
        int c=0;
        while(f<l){
            if(ch[f++]!=ch[l--]){
            c=1;
            break;
            }


        }
        if(c==0)
        return true;
        return false;


        
    }
}
