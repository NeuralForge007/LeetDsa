/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {

    TreeNode prev=null;
    TreeNode p1=null;
    TreeNode p2=null;
    public void recoverTree(TreeNode root) {

     inorder(root);
     int p=p2.val;
     p2.val=p1.val;
     p1.val=p;


        
    }
    public void inorder(TreeNode root)
    {
        if(root==null)
        return;
         
        inorder(root.left);
        if( prev!=null && prev.val>root.val)
        {
              if(p1==null)
              p1=prev;
              p2=root;
        }
        prev=root;

        inorder(root.right);
    }
}
